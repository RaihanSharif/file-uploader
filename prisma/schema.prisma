generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  username  String   @unique
  password  String
  folders   Folder[]
  files     File[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  files File[]
  
  parentId Int?  
  parentFolder Folder? @relation("parent", fields: [parentId], references: [id], onDelete: Cascade)
  children Folder[] @relation("parent")

  // prevent multiple root folders and two sibling folders having the same name
  @@unique([userId, parentId, name]) 
}

model File {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references:[id])
  userId Int
  name String
  path String // the string path to where the file is stored in supabase
  folderId Int
  containingFolder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)


  // prevent two files in one directory having the same name.
  @@unique([userId, folderId, name])
}
