<div class="item">
    <div class="logo">
        <img src="/icons/document-icon.svg" alt="file icon" />
        <p><%= file.name %></p>
    </div>
    <div class="buttons">
        <!-- <a href="<%= file.downloadLink %>"
            ><input type="image" src="../icons/download-icon.svg"
        /></a> -->

        <dialog>
            <button class="exit-dialog">X</button>
            <p>Rename</p>
            <form action="/updateFile/<%= file.id %>" method="post">
                <input type="text" name="filename" id="filename" />
                <button type="submit">Rename</button>
            </form>
        </dialog>
        <div><input type="image" src="/icons/edit-icon.svg" /></div>
        <form
            action="/deleteFile/<%= currentUser.id %>/<%= file.id %>"
            method="post">
            <input type="image" src="/icons/delete-icon.svg" />
        </form>
        <form action="/viewFileDetails/<%= file.id %>" method="post">
            <input type="image" src="/icons/edit-icon.svg" />
        </form>
    </div>
</div>
